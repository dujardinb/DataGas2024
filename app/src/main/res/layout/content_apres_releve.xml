<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp"
    android:background="#fffef3f6"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Src.Releve">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Bandeau Site   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:background="@drawable/border"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="@string/content_apres_releve_001"
                    android:textSize="25sp"

                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/releve_site"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--Bandeau Niveau 1    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:background="@drawable/border"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="@string/content_apres_releve_002"
                    android:textSize="25sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/releve_niveau1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--Bandeau Niveau 2    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:background="@drawable/border"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="@string/content_apres_releve_003"
                    android:textSize="25sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/releve_niveau2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/releve_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#3d5c5c"
                    android:textSize="20sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <!--AFFICHAGE DU TABLEAU DE SAISIE
                    ******************************  -->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:stretchColumns="1">

                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="25"
                            android:background="@drawable/border"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="@string/content_apres_releve_004"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="30"
                            android:background="@drawable/border"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="@string/content_apres_releve_005"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="30"
                            android:background="@drawable/border"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="@string/content_apres_releve_006"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="15"
                            android:background="@drawable/border"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text=""
                            android:textSize="20sp"
                            android:textStyle="italic" />
                    </TableRow>

                    <!-- Ouverture de la Vanne -->
                    <TableRow>

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="25"
                            android:background="@drawable/border1"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="@string/content_apres_releve_007"
                            android:textColor="#800000"
                            android:textSize="20sp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/releve1__vanne_old"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:background="@drawable/border1"
                            android:gravity="right"
                            android:padding="5dp"
                            android:text="XXXXX"
                            android:textColor="#800000"
                            android:textSize="20sp"
                            android:textStyle="normal" />

                        <EditText
                            android:id="@+id/releve1__vanne_AM"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:background="@drawable/border1"
                            android:contentDescription="@string/content_apres_releve_007"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="5dp"
                            android:textColor="#800000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="15"
                            android:background="@drawable/border1"
                            android:gravity="right"
                            android:padding="5dp"
                            android:text="%"
                            android:textColor="#800000"
                            android:textSize="20sp"
                            android:textStyle="normal" />
                    </TableRow>

                    <View
                        android:layout_height="2dip"
                        android:background="#FF909090" />

                    <!-- Vitesse  -->
                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="25"
                            android:background="@drawable/border1"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="@string/content_apres_releve_009"
                            android:textColor="#800000"
                            android:textSize="20sp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/releve1_vitesse_old"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:background="@drawable/border1"
                            android:gravity="right"
                            android:padding="5dp"
                            android:text="XXXXX"
                            android:textColor="#800000"
                            android:textSize="20sp"
                            android:textStyle="normal" />

                        <EditText
                            android:id="@+id/releve1_vitesse_AM"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:background="@drawable/border1"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="5"
                            android:padding="5dp"
                            android:textColor="#800000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="15"
                            android:background="@drawable/border1"
                            android:gravity="right"
                            android:padding="5dp"
                            android:text="m/s"
                            android:textColor="#800000"
                            android:textSize="20sp"
                            android:textStyle="normal" />
                    </TableRow>

                    <View
                        android:layout_height="2dip"
                        android:background="#FF909090" />

                    <!-- Dépression -->
                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="25"
                            android:background="@drawable/border1"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="@string/content_apres_releve_010"
                            android:textColor="#800000"
                            android:textSize="20sp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/releve1_depression_old"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:background="@drawable/border1"
                            android:gravity="right"
                            android:padding="5dp"
                            android:text="XXXXX"
                            android:textColor="#800000"
                            android:textSize="20dp"
                            android:textStyle="normal" />

                        <EditText
                            android:id="@+id/releve1_depression_AM"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:background="@drawable/border1"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="numberDecimal|numberSigned"
                            android:maxLength="8"
                            android:padding="5dp"
                            android:textColor="#800000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="15"
                            android:background="@drawable/border1"
                            android:gravity="right"
                            android:padding="5dp"
                            android:text="@string/content_apres_releve_011"
                            android:textColor="#800000"
                            android:textSize="20sp"
                            android:textStyle="normal" />
                    </TableRow>

                    <View
                        android:layout_height="2dip"
                        android:background="#FF909090" />


                    <View
                        android:layout_height="2dip"
                        android:background="#FF909090" />


                    <!-- Commentaire -->
                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="25"
                            android:background="@drawable/border1"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="@string/content_apres_releve_11"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                        <EditText
                            android:id="@+id/releve1_commentaire_AM"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="75"
                            android:background="@drawable/border1"
                            android:ems="10"
                            android:gravity="left"
                            android:inputType="text"
                            android:maxLines="3"
                            android:padding="5dp"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <View
                        android:layout_height="2dip"
                        android:background="#FF909090" />

                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/releve_annuler"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="@string/content_apres_releve_12" />

                <Button
                    android:id="@+id/releve_valider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="@string/content_apres_releve_13" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
